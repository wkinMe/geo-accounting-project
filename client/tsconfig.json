// client/tsconfig.json
{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Важно: настройки путей */
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@src/*": ["src/*"],
			"@shared/*": ["../packages/shared/*"],
			"@root/*": ["../*"], // Алиас на корневую папку проекта
			"@server/*": ["../server/*"], // Если нужен доступ к серверу
			"@client/*": ["./*"] // Текущая папка клиента
		}
	},
	"include": [
		"src",
		"../packages/shared", // Включаем shared
		"../packages/shared/**/*"
	],
	"references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
