{
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"target": "ES2022",
		"useDefineForClassFields": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"types": ["vite/client"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"composite": true,
		"declaration": true,
		/* Важно: настройки путей */
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@src/*": ["src/*"],
			"@shared/*": ["../packages/shared/*"],
			"@root/*": ["../*"], // Алиас на корневую папку проекта
			"@server/*": ["../server/*"], // Если нужен доступ к серверу
			"@client/*": ["./*"] // Текущая папка клиента
		}
	},
	"include": [
		"src",
		"../packages/shared", // Включаем shared
		"../packages/shared/**/*"
	]
}
